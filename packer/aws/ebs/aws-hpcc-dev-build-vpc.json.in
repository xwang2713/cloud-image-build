{
  "min_packer_version": "1.0.0",
  "variables": {
    "hpcc_version": "@HPCC_VERSION@",
    "codename": "@CODENAME@",     
    "arch": "@ARCH@",     
    "aws_access_key": "{{env `ACCESS_KEY`}}",
    "aws_secret_key": "{{env `SECRET_KEY`}}",
    "aws_region": "@AWS_REGION@",
    "ssh_keypair_name": "{{env `SSH_KEYPAIR_NAME`}}",
    "ssh_private_key_file": "{{env `SSH_PRIVATE_KEY_FILE`}}"
  },
  "builders": [{
    "type": "@BUILD_TYPE@",
    "ami_virtualization_type" : "hvm",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "@BASE_AMI@",
    "instance_type": "@INSTANCE_TYPE@",
    "iam_instance_profile" : "@INSTANCE_PROFILE@",
    "ssh_username": "@USER@",
    "subnet_id" : "@SUBNET_ID@",
    "associate_public_ip_address": "true",
    "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
    "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
    "ami_name": "hpcc-systems-dev-{{user `codename`}}-{{user `arch`}}",
    "tags": {
      "lifecycle": "dev",
      "market": "hpccsystems",
      "owner_email": "xiaoming.wang@lexisnexis.com",
      "product": "hpccsystems",
      "project": "hpcc builds",
      "service": "ec2",
      "support_email": "xiaoming.wang@lexisnexis.com",  
      "application": "hpccsystems"  
    },
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/@DEVICE_NAME@",
	"delete_on_termination" : true,
	"volume_size" : 20
       }
    ]

  }],
  "provisioners": [{
        "type": "shell",
        "environment_vars": [
           "HPCC_FULL_VERSION={{user `hpcc_version`}}"
        ],
        "scripts": [
          "./hpcc-dev-{{user `codename`}}-{{user `arch`}}.sh"
        ]
 }]
}
